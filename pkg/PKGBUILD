pkgname=obr-desktop
pkgver=1.01
pkgrel=1
pkgdesc="Desktop Meta-Package for OBRevenge"
arch=('any')
license=('GPL')
makedepends=('git')
url=https://github.com/obrevenge/obr-desktop
depends=('python2' 'openbox' 'obr-control-panel' 'obr-panelswitcher' 'revenge-software-install-tool' 'obr-tools' 'revenge-welcome' 'obr-wallpapers' 'revenge-wallpapers')
source=("git+$url.git")
md5sums=('SKIP')
install=$pkgname.install
    
package() {
	install -d $pkgdir/etc
	cp -r $srcdir/obr-desktop/shared/skel_new $pkgdir/etc
}

# -*- mode: bash;-*-


